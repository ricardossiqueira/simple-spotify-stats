<svg width="400" height="105" fill="none"  xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
  <foreignObject width="400" height="105">
  <style>
    .container {
      background-color: #fffefe;
      height: 100px;
      border-radius: 5px 5px 5px 5px;
    }

    .song-name {
      font: 600 18px 'Segoe UI', Ubuntu, Sans-Serif;
      font-weight: 600;
      fill: #333;
      animation: fadeInAnimation 0.8s ease-in-out forwards;
      left: 110px;
      top: 10px;
      position: absolute;
    }

    .artists {
      font: 600 14px 'Segoe UI', Ubuntu, "Helvetica Neue", Sans-Serif;
      fill: #333;
      animation: fadeInAnimation 0.8s ease-in-out forwards;
      left: 110px;
      top: 40px;
      position: absolute;
    }

    .album {
      font: 600 14px 'Segoe UI', Ubuntu, "Helvetica Neue", Sans-Serif;
      font-weight: 200;
      fill: #333;
      animation: fadeInAnimation 0.8s ease-in-out forwards;
      left: 110px;
      top: 65px;
      position: absolute;
    }

    .spotify-logo {
      left: 358px;
      top: 10px;
      position: absolute;
    }

    .album-cover {
      border-radius: 5px 0px 0px 5px;
    }

    img {
      animation: fadeInAnimation 0.8s ease-in-out forwards;
    }

    /* Animations */
    @keyframes fadeInAnimation {
      from {
        opacity: 0;
      }

      to {
        opacity: 1;
      }
    }
  </style>

  <div xmlns="http://www.w3.org/1999/xhtml" class="container">
    <div xmlns="http://www.w3.org/1999/xhtml">
      <img class='album-cover' src="data:image/png;base64,{{album_cover}}" width="100" height="100"/>
      <a href='{{href}}'>
        <img class='spotify-logo' src="data:image/png;base64,{{spotify_logo}}" width="32" height="32"/>
      </a>
    </div>
    <div class="song-name" id='h-scroll-song-name'>{{song_name}}</div>
    <div class="artists" id='h-scroll-artists'>{{artists}}</div>
    <div class="album" id='h-scroll-album'>{{album_name}}</div>
  </div>

  <script>
    function sleep(ms) {
      return new Promise(resolve => setTimeout(resolve, ms));
    }

    async function hScroll(elementId, maxLen, ms) {
      const element = document.getElementById(elementId);
      let text = element.textContent;
      let i = 0;
      if (text.length > maxLen) {
        while (true) {
          await sleep(ms);
          element.textContent = text.slice(i, maxLen + i);
          i++;
          if (i == text.length) {
            i = 0;
          }
        }
      } 
    }

    hScroll('h-scroll-song-name', 27, 300);
    hScroll('h-scroll-artists', 45, 800);
    hScroll('h-scroll-album', 45, 300);
  </script>

  </foreignObject>
</svg>